<div id="center">
<%= form_for @user, url: {action: "create"} do |f| %>
  <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "NAME" %>
  <br>
  <%= f.text_field :email, class: "form-control form-control-lg", placeholder: "EMAIL" %>
  <br>
  <%= f.text_field :bio, class: "form-control form-control-lg", placeholder: "BIO" %>
  <br>

  <br><br>
  <%= f.submit "Send", class: "btn btn-primary btn-lg" %>
<% end %>
</div>

